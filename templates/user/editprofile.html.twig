{% extends 'base.html.twig' %}

{% block title %}Modification de mon profil{% endblock %}

{% block body %}
    <div class="grix xs4 container mb-3">
        <div class="col-xs4">
            <div class="h2" style="margin-top: 80px">
                Modification de mon profil
            </div>
            {{ form_start(form) }}
            <div class="form-group mt-4">
                {{ form_row(form.firstName,{'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group mt-3">
                {{ form_row(form.lastName,{'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group mt-3">
                {{ form_row(form.email,{'attr':{'class':'form-control'}}) }}
            </div>
            <br>
            <button class="btn btn-success" type="submit">Valider</button>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}