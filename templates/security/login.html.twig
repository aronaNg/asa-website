{% extends 'connexion.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="loginbox">
        {% if error %}
            <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                </svg>
                Ce compte n'existe pas !
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endif %}
        <img src="{{ asset('media/profil2.jpg') }}" style="height: 90px" alt="mon profil" class="profil">

        <h2>Connexion <i class="fa-solid fa-user"></i></h2>
        <form method="post">
            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.email }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <label for="inputEmail">Email
                <i class="fa-solid fa-envelope"></i> :
                <input type="email" name="email" id="inputEmail" placeholder="Entrer votre nom" required autofocus></label><br><br>
            <label for="inputPassword">Mot de passe
                <i class="fa-solid fa-lock"></i> :
                <input type="password" name="password" id="inputPassword" placeholder="Entrer votre mot de passe" required></label>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            <input type="submit" name="" value="Se connecter">
            <!--<a href="#">Mot de passe oubli√©?</a><br>-->
        </form>
    </div>
{% endblock %}